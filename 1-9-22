// Online C compiler to run C program online
#include <stdio.h>

int isEven(int n)
{
    return !(n & 1);
}


int main()
{
    int n;
    
    
    printf("Enter any number: ");
    scanf("%d", &n);
    
    
    if(isEven(n))
    {
        printf("The number is even");
    }
    else
    {
        printf("The number is odd");
    }

    return 0;
}

output:-
Enter any number: 30
The number is even
